@page
@model Othello_Web.Pages_OthelloGames.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].StartedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].GameOverAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].Player1Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].Player1Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].Player2Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].Player2Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OthelloGame[0].OthelloOption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OthelloGame) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameOverAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player1Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player1Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player2Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player2Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OthelloOption!.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
